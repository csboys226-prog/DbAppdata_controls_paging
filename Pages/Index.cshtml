@page
@model IndexModel
@{ ViewData["Title"] = "Paging & Sorting"; }

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h3>Student Data Control</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            <a asp-page="./Index" asp-route-sortOrder="@(Model.CurrentSort == "name_desc" ? "" : "name_desc")">
                                Name (Click to Sort)
                            </a>
                        </th>
                        <th>Grade</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Students) {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Grade</td>
                        </tr>
                    }
                </tbody>
            </table>

            <nav>
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage - 1)" asp-route-sortOrder="@Model.CurrentSort">Previous</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage + 1)" asp-route-sortOrder="@Model.CurrentSort">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>